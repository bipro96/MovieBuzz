<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 40;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviebuzz.LoginController">
    <Label text="MovieBuzz Admin" textFill="WHITE">
        <font><Font name="System Bold" size="28.0" /></font>
    </Label>

    <VBox spacing="10.0" maxWidth="300">
        <Label text="Username" textFill="#bdc3c7" />
        <TextField fx:id="usernameField" promptText="Admin ID" style="-fx-background-color: #34495e; -fx-text-fill: white;" />

        <Label text="Password" textFill="#bdc3c7" />
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
    </VBox>

    <Label fx:id="errorMessageLabel" textFill="#e74c3c" visible="false" />

    <Button onAction="#handleLogin" prefWidth="200.0" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold;" text="Access Dashboard" />
</VBox>